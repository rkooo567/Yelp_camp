<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<h1 style="text-align: center;">Add new comments to <%= campground.name %></h1>
			<div style="width: 30%; margin: 35px auto;">
				<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
					<div class ="form-group">
						<!-- comment[author] will be make comment object -->
						<input class="form-control" type="text" name="comment[author]" placeholder="author">
					</div>
					<div class="form-group">
						<textarea class="form-control" type="text" name="comment[text]" placeholder="comment">
						</textarea>
					</div>		
					<div class="form-group">
						<button class='btn btn-large btn-primary btn-block'>Submit!</button>
					</div>
				</form>
				<a href="/campgrounds/<%= campground._id %>">Go back to <%= campground.name %> information page</a>
			</div>
		</div>		
	</div>	

<% include ../partials/footer %>