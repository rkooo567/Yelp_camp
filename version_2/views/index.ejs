<% include partials/header %>

	<!-- my part -->
	<div class="container">
		<header class="jumbotron">
			<div class='container'>
				<h1>Welcome to Yelp Camp</h1>
				<p>View our hand-picked campground from all over the world</p>
				<p>
					<a class='btn btn-primary btn-lg' href="/campgrounds/new">Add a new campground</a>
				</p>
			</div>
		</header>
		<div class='row text-center'>
			<!-- print campgrounds information -->
			<% campgrounds.forEach(function(campground){ %>
				<div class='col-md-3 col-sm-6'>
					<div class="rounded">
						<img src="<%= campground.image %>" width='250px' height='200px'>
						<div class='caption'>
							<%= campground.name %>
						</div>
						<p>
							<a href="/campgrounds/<%= campground._id %>" class='btn btn-primary'>More info</a>		
						</p>
					</div>
				</div>
			<% }); %>
		</div>
	</div>

<% include partials/footer %>